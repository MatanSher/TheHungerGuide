<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pexels_pixabay_326268_1"
    tools:context="com.foodRecipe.TheHungerGuide.LoginRegisterProfile.RegisterActivity">
    <include layout="@layout/registerbar"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/register_layout_img2"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/register_layout_img4"
        android:layout_marginTop="400dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הרשמה"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginTop="405dp"
        android:drawablePadding="12dp"
        android:layout_marginRight="65dp"
        android:ems="10"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_register_user"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="80dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_pic"/>

    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/base_ek1_color"
        android:onClick="btnSelectImage"
        android:text="בחר תמונה"
        android:layout_marginLeft="252dp"
        android:layout_marginTop="460dp"            android:textColor="@color/_______color"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/button_design"/>



    <EditText
        android:id="@+id/signup_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="515dp"
        android:drawablePadding="12dp"
        android:layout_centerHorizontal="true"
        android:drawableRight="@drawable/ic_baseline_person_24"
        android:ems="10"
        android:hint="שם מלא"
        android:paddingStart="12dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/signup_username"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="565dp"
        android:drawablePadding="12dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:drawableRight="@drawable/ic_baseline_person_pin_24"
        android:hint="שם משתמש"
        android:paddingStart="12dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="615dp"
        android:drawablePadding="12dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:drawableRight="@drawable/ic_baseline_email_24"
        android:hint="אימייל"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="665dp"
        android:drawablePadding="12dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:drawableRight="@drawable/ic_baseline_lock_24"
        android:hint="                                          סיסמא"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/signup_button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_design"
        android:backgroundTint="@color/base_ek1_color"
        android:text="צור משתמש"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/_______color"
        android:layout_marginTop="712dp"/>



</RelativeLayout>