<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pexels_pixabay_326268_1"
    tools:context="com.foodRecipe.TheHungerGuide.LoginRegisterProfile.StartActivity">


    <ImageView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_layout_img1"
        android:layout_marginTop="50dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_layout_img2"
        android:layout_marginTop="600dp"/>

    <Button
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_design"
        android:backgroundTint="@color/base_ek1_color"
        android:text="התחברות"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="630dp"
        android:textColor="@color/_______color"/>

    <Button
        android:id="@+id/register"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_design"
        android:backgroundTint="@color/base_ek1_color"
        android:text="הרשמה"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="730dp"
        android:textColor="@color/_______color"/>


</RelativeLayout>


