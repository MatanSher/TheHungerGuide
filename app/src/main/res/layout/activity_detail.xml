<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.foodRecipe.TheHungerGuide.DisplayRecipe.DetailActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/category_img5"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="מתכון"
        android:textColor="@color/_______color"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btnUpdateRecipe"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="עדכן"
        android:textColor="@color/_______color"
        android:textSize="20dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="62dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/ic_baseline_arrow_back_24_red"/>

    <TextView
        android:id="@+id/txtRecipeName"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="120dp"
        android:gravity="center|top"
        android:padding="20dp"
        android:textSize="24sp"
        android:hint="שם המתכון"
        android:textColor="@android:color/black"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/ivImage2"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:background="@drawable/shadow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:src="@drawable/upload_img5" />

    <TextView
        android:id="@+id/timePrice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="415dp"
        android:textColor="@android:color/black"
        android:textSize="28sp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="395dp"
        android:gravity="center"
        android:text="זמן הכנה"
        android:textColor="@color/_______color"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="465dp"
        android:layout_marginRight="15dp"
        android:text=" רכיבים"
        android:textColor="@color/_______color"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <ScrollView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="500dp">

    <TextView
        android:id="@+id/txtIngredients"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:gravity="top|center"
        android:text="רכיבים"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold|italic" />

    </ScrollView>


    <ImageView
        android:id="@+id/textIngredients"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="70dp"
        android:layout_weight="3"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_menu_book_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="לרשימת רכיבים מלאה"
        android:layout_marginTop="555dp"
        android:layout_marginLeft="5dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="605dp"
        android:layout_marginRight="15dp"
        android:text=" אופן הכנה"
        android:textColor="@color/_______color"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <ScrollView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="645dp">

    <TextView
        android:id="@+id/txtPreparation"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:gravity="top|center"
        android:text="אופן הכנה"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold|italic" />

    </ScrollView>


    <ImageView
        android:id="@+id/textPreparation"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="645dp"
        android:layout_weight="3"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_menu_book_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="לאופן הכנה מלא"
        android:layout_marginTop="700dp"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="760dp"
        android:layout_weight="3"
        android:scaleType="centerCrop"
        android:src="@drawable/category_img5" />

    <ImageView
        android:id="@+id/homeBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="3"
        android:scaleType="centerCrop"
        android:layout_marginTop="775dp"
        android:layout_marginLeft="70dp"
        android:src="@drawable/category_img6"/>

    <ImageView
        android:id="@+id/profileBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="3"
        android:scaleType="centerCrop"
        android:layout_marginTop="775dp"
        android:layout_marginLeft="185dp"
        android:src="@drawable/category_img7"/>

    <ImageView
        android:id="@+id/deleteRecipe"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="770dp"
        android:layout_weight="3"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_baseline_delete_forever_24" />

    <TextView
        android:id="@+id/txtCategory"
        android:layout_width="0dp"
        android:layout_height="0dp" />

</RelativeLayout>